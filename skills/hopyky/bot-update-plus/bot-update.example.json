{
  "backup_dir": "~/.bot/backups",
  "backup_before_update": true,
  "backup_count": 5,
  "excluded_skills": [],
  "backup_paths": [
    {"path": "~/.bot", "label": "config", "exclude": ["backups", "logs", "media", "*.lock"]},
    {"path": "~/bot", "label": "workspace", "exclude": ["node_modules", ".venv", "__pycache__"]}
  ],
  "skills_dirs": [
    {"path": "~/.bot/skills", "label": "prod", "update": true},
    {"path": "~/bot/skills", "label": "dev", "update": false}
  ],
  "remote_storage": {
    "enabled": false,
    "rclone_remote": "gdrive:",
    "path": "bot-backups"
  },
  "encryption": {
    "enabled": false,
    "gpg_recipient": "your-email@example.com"
  },
  "notifications": {
    "enabled": false,
    "target": "+1234567890",
    "on_success": true,
    "on_error": true
  }
}
