{
  "name": "bot-update",
  "version": "1.0.0",
  "description": "Comprehensive backup, update, and restore workflow for Bot installations",
  "repository": {
    "type": "git",
    "url": "https://github.com/bot/bot"
  },
  "upstream": {
    "remote": "origin",
    "url": "https://github.com/bot/bot",
    "defaultBranch": "main"
  },
  "paths": {
    "repo": "~/code/bot",
    "config": "~/.bot/bot.json",
    "backups": "~/.bot-backups",
    "skills": "~/.skills/bot-update"
  },
  "features": {
    "dynamicWorkspaces": true,
    "multiAgent": true,
    "sandboxSupport": true,
    "gitIntegration": true
  },
  "backup": {
    "includes": [
      "config",
      "sessions",
      "agents",
      "credentials",
      "cron",
      "sandboxes",
      "workspaces (dynamic from config)",
      "git state"
    ]
  }
}
